<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gorrilaport.mysteryshoptools.ui.category.AddEditCategoryDialogFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_add_category"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_enter_category"
            android:padding="@dimen/margin_padding_tiny"
            android:gravity="left"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayoutCategory"
        android:animateLayoutChanges="false"
        android:background="#A384DD"
        android:paddingTop="20dp">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/category_color_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:background="#4F1AAC"
            android:inputType="textCapWords"
            android:elevation="@dimen/bootstrap_badge_default_size"
            android:fontFamily="sans-serif-condensed"
            android:shadowDx="@integer/text_size"
            android:shadowDy="@integer/google_play_services_version"
            android:text="Choose color"
            android:textColor="#FFFFFF"
            app:buttonMode="regular"
            app:roundedCorners="true">

        </com.beardedhen.androidbootstrap.BootstrapButton>

        <ImageView
            android:id="@+id/color_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="34dp"
            android:elevation="@dimen/bootstrap_badge_default_size"
            android:paddingLeft="30dp"
            android:shadowDx="@integer/text_size"
            android:shadowDy="@integer/google_play_services_version" />

    </LinearLayout>

</RelativeLayout>
