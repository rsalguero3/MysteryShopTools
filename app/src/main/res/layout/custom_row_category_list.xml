<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_small"
    android:orientation="horizontal"
    android:padding="@dimen/margin_padding_tiny">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="@dimen/text_size_xxnormal"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_view_note_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 Note"
            android:textSize="@dimen/text_size_small"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="@dimen/margin_padding_tiny"
        android:background="@color/primary"
        android:layout_marginBottom="@dimen/margin_padding_small"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_button_edit_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/margin_padding_tiny"
            android:src="@drawable/ic_action_edit"/>

        <ImageButton
            android:id="@+id/image_button_delete_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/margin_padding_tiny"
            android:src="@drawable/ic_action_trash"/>
    </LinearLayout>

</LinearLayout>